@page
@model Taskmangaer.Pages.EditTaskModel
@{
}



<h2>Edit Task</h2>

<form method="post" asp-page-handler="UpdateTask" class="form">
    <input type="hidden" asp-for="Task.Id" />
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" class="form-control" asp-for="Task.Title" />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" class="form-control" asp-for="Task.Description" />
    </div>
    <div class="form-group">
        <label for="dueDate">Due Date:</label>
        <input type="date" id="dueDate" class="form-control" asp-for="Task.DueDate" />
    </div>
    <div class="form-group">
        <label for="priority">Priority:</label>
        <select id="priority" class="form-control" asp-for="Task.TaskPriority">
            <option value="LOW">Low</option>
            <option value="MEDIUM">Medium</option>
            <option value="HIGH">High</option>
        </select>
    </div>
    <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" id="category" class="form-control" asp-for="Task.Category" />
    </div>
    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" class="form-control" asp-for="Task.TaskStatus">
            <option value="TODO">To Do</option>
            <option value="IN_PROGRESS">In Progress</option>
            <option value="DONE">Done</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Task</button>
</form>